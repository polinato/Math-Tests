<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!--fx:id="anchorPane"-->

<AnchorPane fx:id="anchorPane" prefHeight="200.0" prefWidth="600.0" stylesheets="@../style/style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tohoieva.mathtests.mainMenu.MainMenuController">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0">
         <children>
            <Label id="caption" text="Вітаємо у Math Tests!">
               <font>
                  <Font size="28.0" />
               </font>
               <VBox.margin>
                  <Insets top="-40.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="70.0" />
               </padding>
            </Label>
            <Button fx:id="AddTaskButton" mnemonicParsing="false" onAction="#handleActionAddTask" prefHeight="30.0" prefWidth="150.0" style="-fx-border-insets: 0px;" text="Додати завдання">
               <font>
                  <Font name="Bauhaus 93" size="14.0" />
               </font></Button>
            <Button fx:id="PassTestButton" mnemonicParsing="false" onAction="#handleActionPassTest" prefHeight="30.0" prefWidth="150.0" text="Пройти тест">
               <font>
                  <Font size="14.0" />
               </font></Button>
            <Button fx:id="ExitButton" mnemonicParsing="false" onAction="#handleActionExit" prefHeight="30.0" prefWidth="150.0" text="Вийти">
               <font>
                  <Font size="14.0" />
               </font></Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
